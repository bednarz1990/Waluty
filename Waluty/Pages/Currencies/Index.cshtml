@page
@model Waluty.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExchangeRate[0].Code)
            </th>
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ExchangeRate) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ExchangeRateId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ExchangeRateId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ExchangeRateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
